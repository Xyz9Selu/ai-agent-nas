# .env.template
# Copy this file to .env and update the values with your actual configuration

# === Generic Settings ===
# Set the timezone for your n8n instance to ensure scheduled workflows run correctly.
# A list of valid timezones can be found here: https://en.wikipedia.org/wiki/List_of_tz_database_time_zones
# Example: Europe/Berlin, America/New_York, Asia/Singapore
TZ=Asia/Singapore
DOCKER_NETWORK=public-network

# === n8n Settings ===
# The external-facing port for the n8n web interface.
N8N_PORT=5678
# n8n-server (Python API service) port. Default: 5000
N8N_SERVER_PORT=5000
# n8n-server document_rows table name. Default: document_rows
DOCUMENT_ROWS_TABLE_NAME=document_rows
POSTGRES_EXTERNAL_PORT=5432

# The domain name you will use to access n8n.
# This is crucial for webhooks to work correctly.
# If you are running on your local machine for testing, you can use 'localhost'.
N8N_HOST=localhost
WEBHOOK_URL=http://${N8N_HOST}:${N8N_PORT}
N8N_SECURE_COOKIES=false

# === PostgreSQL Database Settings ===
# These credentials will be used by n8n to connect to the database.
# You can leave these as they are or change them, but ensure they match
# what the n8t service expects.
# IMPORTANT: CHANGE THE PASSWORD!
POSTGRES_DB=n8n
POSTGRES_USER=n8nuser
POSTGRES_PASSWORD=YourSuperSecureDbPassword!

RAG_POSTGRES_DB=ai_agent
RAG_POSTGRES_USER=n8nuser
RAG_POSTGRES_PASSWORD=change-this-password

# pgvector embedding dimension (e.g. 3072 for text-embedding-3-large, 1536 for text-embedding-3-small)
VECTOR_SIZE=3072

# n8n Email setting
N8N_EMAIL_MODE=smtp
N8N_SMTP_HOST=smtp.gmail.com
N8N_SMTP_PORT=465
N8N_SMTP_USER=your-smtp-user
N8N_SMTP_PASS=your-smtp-password
N8N_SMTP_SENDER=your-sender-email
N8N_SMTP_SSL=true
